*
  font-family '微軟正黑體'
  transition 0.5s
  box-sizing border-box
  user-select: none
  outline: none
  
size(w=100%,h=w,bdrs=16px) 
  width w
  height h
  border-radius bdrs
  
flexCenter(j=center,a=j,d=row)
  display flex
  justify-content j
  align-items a
  flex-direction d

posCenter(l=50%,t=50%)
  position absolute
  left l
  top t
  transform translate(-(l),-(t))

html,body
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center